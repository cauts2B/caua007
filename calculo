for i in range (5):
  numero = int(input ("digite um numero: "))
  
  if numero %2 == 0 :
    print("o numero e par")
  else: 
   print("o numero e impar")

  if numero == 0 :
    print("o numero é neutro")
  elif numero >0 :
    print("o numero é positivo")
  else:
    print("o numero é negativo")
